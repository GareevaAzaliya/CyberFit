<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Заголовок -->
        <TextView
            android:id="@+id/titleSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Команда"
            android:textColor="@android:color/black"
            android:textSize="26sp"
            android:textStyle="bold" />

        <!-- Игрок 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:padding="12dp"
            android:elevation="4dp"
            android:outlineSpotShadowColor="#808080"
            android:backgroundTint="#FDF8F8"
            android:cornerRadius="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="Игрок"
                android:src="@drawable/account" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:text="Игрок 1"
                android:textColor="#070707"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Игрок 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:padding="12dp"
            android:elevation="4dp"
            android:outlineSpotShadowColor="#808080"
            android:backgroundTint="#FBF6F6"
            android:cornerRadius="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="Игрок"
                android:src="@drawable/account" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:text="Игрок 2"
                android:textColor="#000000"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Игрок 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:padding="12dp"
            android:elevation="4dp"
            android:outlineSpotShadowColor="#808080"
            android:backgroundTint="#F9F4F4"
            android:cornerRadius="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="Игрок"
                android:src="@drawable/account" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:text="Игрок 3"
                android:textColor="#000000"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Игрок 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:padding="12dp"
            android:elevation="4dp"
            android:outlineSpotShadowColor="#808080"
            android:backgroundTint="#F7F2F2"
            android:cornerRadius="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="Игрок"
                android:src="@drawable/account" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:text="Игрок 4"
                android:textColor="#000000"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Игрок 5 (добавлен) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:padding="12dp"
            android:elevation="4dp"
            android:outlineSpotShadowColor="#808080"
            android:backgroundTint="#F5F0F0"
            android:cornerRadius="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="Игрок"
                android:src="@drawable/account" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:text="Игрок 5"
                android:textColor="#000000"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>